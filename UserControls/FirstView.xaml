<Custom_Control:ResizableContentControl x:Class="TextDashboard.UserControls.FirstView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Custom_Control="clr-namespace:TextDashboard.Custom_Control">
    <Border
        Style="{StaticResource SimpleBorderStyle}">
        <StackPanel>
            <TextBlock
                Style="{StaticResource HeaderTextBlockStyle}"
                Text="Scan Device" />

            <TextBox
                Style="{StaticResource StandardTextBoxStyle}"
                Width="170"
                HorizontalAlignment="Left" />
            <Button
                Style="{StaticResource StandardButtonStyle}"
                HorizontalAlignment="Left"
                Width="85"
                Click="Button_Click"
                Content="Find"/>
            <Button
                Style="{StaticResource StandardButtonStyle}"
                HorizontalAlignment="Left"
                Width="85"
                Click="Button_Click_1"
                Content="Clear"/>

            <ContentControl
                x:Name="Loading"
                Margin="10,0,0,0"
                Visibility="Collapsed"
                Style="{DynamicResource SmallLoadingIndicatorStyle}" />

