<Custom_Control:ResizableContentControl x:Class="TextDashboard.UserControls.FirstView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Custom_Control="clr-namespace:TextDashboard.Custom_Control">
    <Border
        Style="{StaticResource SimpleBorderStyle}">
        <StackPanel>
            <TextBlock
                Style="{StaticResource HeaderTextBlockStyle}"
                Text="Scan Device" />

            <TextBox
                Style="{StaticResource StandardTextBoxStyle}"
                Width="170"
                HorizontalAlignment="Left" />
            <Button
                Style="{StaticResource StandardButtonStyle}"
                HorizontalAlignment="Left"
                Width="85"
                Content="Find"
                Click="Button_Click"/>
            <Button
                Style="{StaticResource StandardButtonStyle}"
                HorizontalAlignment="Left"
                Width="85"
                Content="Clear"
                Click="Button_Click_1" />
        </StackPanel>
    </Border>
</Custom_Control:ResizableContentControl>
