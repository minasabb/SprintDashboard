<Custom_Control:SelfExpandableControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Custom_Control="clr-namespace:TextDashboard.Custom_Control"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Microsoft_Windows_Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
    x:Class="TextDashboard.UserControls.CoverageView"
    x:Name="vDeviceSearchView"
    mc:Ignorable="d">
    <Grid>
        <ContentControl
            Visibility="Collapsed"
            x:Name="Loading"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Style="{DynamicResource SmallLoadingIndicatorStyle}" />

        <Border
            Width="250"
            x:Name="ScanDeviceBorder"
            Background="{Binding Path=ContentBackgroundColor,ElementName=vDeviceSearchView}">
            <StackPanel
                Margin="5"
                x:Name="ScanDeviceStackPanel">
                <Label
                    Style="{StaticResource FieldLabelStyle}"
                    Content="Zip *" />
                <TextBox
                    x:Name="field"
                    Style="{StaticResource StandardTextBoxStyle}"
                    Width="170"
                    Text="97204"
                    HorizontalAlignment="Left" />
                <Label
                    Style="{StaticResource FieldLabelStyle}"
                    Content="Street Address 1 *" />
                <TextBox
                    x:Name="field2"
                    Text="1121 SW 5th Ave"
                    Style="{StaticResource StandardTextBoxStyle}"
                    Width="170"
                    HorizontalAlignment="Left" />
                <Label
                    Style="{StaticResource FieldLabelStyle}"
                    Content="Street Address 2" />
                <TextBox
                    x:Name="field3"
                    Style="{StaticResource StandardTextBoxStyle}"
                    Width="170"
                    HorizontalAlignment="Left" />
                <Label
                    Style="{StaticResource FieldLabelStyle}"
                    Content="City *" />
                <TextBox
                    x:Name="field4"
                    Style="{StaticResource StandardTextBoxStyle}"
                    Width="170"
                    Text="Portland"
                    HorizontalAlignment="Left" />
                <Label
                    Style="{StaticResource FieldLabelStyle}"
                    Content="State *" />
                <ComboBox
                    Width="170"
                    HorizontalAlignment="Left"
                    x:Name="cboState"
                    IsReadOnly="True"
                    SelectedIndex="0">
                    <ComboBoxItem>Oregon</ComboBoxItem>
                </ComboBox>
                <StackPanel
                    Orientation="Horizontal">
                    <Button
                        Style="{StaticResource StandardButtonStyle}"
                        HorizontalAlignment="Left"
                        Width="85"
                        Click="CloseButton_OnClick"
                        Content="Close" />

                    <Button
                        Style="{StaticResource PrimaryActionButtonStyle}"
                        HorizontalAlignment="Left"
                        Width="85"
                        Click="Button_Click"
                        Content="Find" />

                </StackPanel>
                <Grid>
                    <ContentControl
                        Visibility="Collapsed"
                        x:Name="LoadingResult"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Style="{DynamicResource SmallLoadingIndicatorStyle}" />
                    <StackPanel
                        Margin="10"
                        x:Name="StackPanelSearchResult"
                        Visibility="Collapsed">
                        <TextBlock
                            Text="Coverage Status"
                            Foreground="Gray"
                            Style="{StaticResource HeaderTextBlockStyle}"
                            Margin="0,5"></TextBlock>


                        <Label
                            Foreground="Black"
                            Style="{StaticResource FieldLabelStyle}"
                            Content="3G Coverage Found"
                            Margin="0" />
                        <Label
                            Foreground="Black"
                            Style="{StaticResource FieldLabelStyle}"
                            Content="EVDO Coverage Found"
                            Margin="0" />
                        <Label
                            Foreground="Black"
                            Style="{StaticResource FieldLabelStyle}"
                            Content="CDMA Coverage: Fair"
                            Margin="0" />
                        <Label
                            Foreground="Black"
                            Style="{StaticResource FieldLabelStyle}"
                            Content="Digital Roaming OK"
                            Margin="0" />
                        <Label
                            Foreground="Black"
                            Style="{StaticResource FieldLabelStyle}"
                            Content="Analog Roaming OK"
                            Margin="0" />

                    </StackPanel>
                </Grid>

            </StackPanel>
        </Border>

    </Grid>



