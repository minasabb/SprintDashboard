<Window x:Class="TextDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:UserControls="clr-namespace:TextDashboard.UserControls" xmlns:Controls="clr-namespace:TextDashboard"
        Title="MainWindow" Height="350" Width="525"
        Name="Main"
        SizeChanged="UpdateControls"
        Loaded="LoadControls">
    <Window.Resources>

        <Controls:WidthPercentageConverter
            x:Key="WidthPercentageConverter" />
        <Storyboard
            x:Key="StoryboardTest">
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(FrameworkElement.Width)"
                Storyboard.TargetName="contentControl">
                <EasingDoubleKeyFrame
                    KeyTime="0"
                    Value="{Binding ElementName=RootCanvas, Path=ActualWidth, Converter={StaticResource WidthPercentageConverter}, ConverterParameter=0.50}" />
                <EasingDoubleKeyFrame
                    KeyTime="0:0:0.5"
                    Value="{Binding ElementName=RootCanvas, Path=ActualWidth, Converter={StaticResource WidthPercentageConverter}, ConverterParameter=0.75}" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(FrameworkElement.Height)"
                Storyboard.TargetName="contentControl">
                <EasingDoubleKeyFrame
                    KeyTime="0"
                    Value="106" />
                <EasingDoubleKeyFrame
                    KeyTime="0:0:0.5"
                    Value="200" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>
